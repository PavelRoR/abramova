#header
	position relative
	z-index 999
	margin-top 88px
	&:after
		content ''
		display block
		background-image: linear-gradient(135deg,transparent 50%, grey 50%);
		transform rotate(45deg)
		width 18px
		height 18px
		position absolute
		top -10px
		left calc(50% - 9px)
		z-index 998
	.container
		padding 12px 6px 0px
		text-align right
		display table
.logo_link
	float left
	margin 9px 0 0 35px
	display table-cell
.contacts
	float right
	font-size 26px
	text-align left
	display table-cell

.callto
	display table-cell
	font-size 35px
	line-height 35px
	color black
	margin 7px 30px 0 0
	position: relative;
	top: -17px;
	
.skypeadd
.mailto
	display block
	line-height 29px
	color black
	letter-spacing: -0.3px;