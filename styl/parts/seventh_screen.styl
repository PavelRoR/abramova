#seventh_screen
	background-image: url(../img/4_day_back.jpg)
	background-position: top center
	background-repeat: no-repeat
	background-size cover
	width: 100%
	height: auto
	margin-top: 40px;
	padding-bottom: 40px
	h4
		font-size: 34px;
		text-align: center
		font-weight: normal;
		padding-top: 45px;
		color white
.day_4_ol
	text-align: left;
	font-size: 30px;
	width: 75%;
	margin: 18px auto 0;
	list-style: none;
	counter-reset: my-counter;
	li
		margin-bottom 15px
		counter-increment: my-counter;
		overflow hidden
		color white
		span
			vertical-align middle
			line-height 1
		&:nth-child(1) span,
		&:nth-child(2) span,
		&:nth-child(4) span
			line-height 2
		&:before
			content: counter(my-counter);
			background: brown;
			padding: 14px 24px;
			border-radius: 50%;
			display: inline-block;
			float left
			color: black;
			margin-right: 15px;