#first_section
	background-image url(../img/first_screen_back_2.jpg)
	background-size cover
	background-repeat no-repeat
	background-attachment scroll
	background-position top center
	width 100%
	padding-bottom: 54px;
	padding-top: 20px;
	.container
		position relative
		text-align center
		h1
			color white
			font-family 'PlayfairDisplayBold', serif
			font-size: 48px;
			padding-top: 105px;
			line-height: 38px;
			margin-bottom 5px
			font-weight 100
			position relative
			z-index 99
			small
				font-size 36px
		h2
			font-size 26px
			color white
			margin-bottom 7px
			position relative
			z-index 99
.date
	font-family 'BebasNeueBold', sans-serif
	color brown
	font-size 53px
.bullits
	color white
	font-family 'OfficinaSerifBookCItalic', sans-serif
	transform rotate(-7deg)
	list-style disc
	font-size: 25px;
	width: 29%;
	margin: 32px auto 26px
	line-height: 33px;

.janna
	display none
	position absolute
	top: -28px;
	z-index 9
	right: -149px;
.evelina
	display none
	position absolute
	top: -32px;
	left: -131px;
	z-index 9
	
.first_screen_form
	width 95%
	position relative
	z-index 99
	margin 0 auto
	text-align center
	top 10px
	p
		background-color brown
		width 100%
		text-align center
		color #2f1731
		font-family 'BebasNeueBold', sans-serif
		font-size 33px
		padding: 23px 0;
		box-shadow 0 5px 0 #7a6134
		margin-bottom 25px
	#email
		border-radius: 10px;

		width: 61.4%;

		float: left;

		padding: 25px;

		border: 0;
	
	#submit
		background-color: #31c51d;

		border: 2px solid #fff;

		color: #000;

		padding: 15px;

		width: 35%;

		float: right;
		font-family 'BebasNeueBold', sans-serif
		font-size 33px
		cursor pointer