#second_screen
	padding 40px

.divider
	display block
	width 7%
	height auto
	margin 0 auto
.wrapper {
	position: relative;
	max-width: 700px
	margin 0 auto
}

.wrapper:before {
	content: '';
	display: block;
	padding-top: 56.25%;
	height: 0;
	margin: 20px 0;
}
.video
	width 75%
	margin 40px auto
	cursor pointer
	img
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
.img-thumbnail
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;