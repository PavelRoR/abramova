#menu
	padding 43px 0 24px
	background-color white
	position fixed
	top 0
	left 0
	right 0
	z-index 9999
	border-bottom 1px solid grey
	transition all .8s ease
	width 100%
.active
	border-radius 50px
	background-color pink
	color white !important
	transition all .4s ease
.menu_ul
	width 100%
	margin 0 auto
	display table
	li
		display table-cell
		vertical-align middle
		text-align center
		a
			color black
			padding 6px 13px
			font-size 18px
			transition all .4s ease
			&:hover
				border-radius 50px
				background-color pink
				color white
				transition all .4s ease
#menu_icon {
	display: none;
	position: fixed;
	top: 33px;
	right: 33px;
	background-color: #fff;
	box-shadow: 0px 3px 6px 0px rgba(0, 0, 0, 0.25);
	width: 63px;
	height: 63px;
	z-index: 999900;
	cursor: pointer;
	overflow: hidden;
}

.upper_span,
.middle_span,
.lower_span {
	background-color: pink;
	width: 45px;
	height: 9px;
	display: block;
	position: absolute;
	left: 9px;
	-webkit-transition: all .4s ease;
	-o-transition: all .4s ease;
	transition: all .4s ease;
}

.upper_span {
	top: 9px;
}

.upper_span_opened {
	top: 29px;
	-webkit-transform: rotate(45deg);
	-moz-transform: rotate(45deg);
	-ms-transform: rotate(45deg);
	-o-transform: rotate(45deg);
	transform: rotate(45deg);
}

.middle_span {
	top: 27px;
	opacity 1
	transition all .6s ease-in-out
}

.middle_span_opened {
	opacity 0
	transition all .6s ease-in-out
}

.lower_span {
	top: 45px;
}

.lower_span_opened {
	top: 29px;
	-webkit-transform: rotate(-45deg);
	-moz-transform: rotate(-45deg);
	-ms-transform: rotate(-45deg);
	-o-transform: rotate(-45deg);
	transform: rotate(-45deg);
}
	